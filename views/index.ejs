  <script>
/**
 * Fetches sensor status data from the server and updates the UI.
 * 
 * This function retrieves the latest sensor data via a GET request to the '/api/sensor-status' endpoint.
 * Upon successful response, it parses the data and dynamically creates and appends sensor cards
 * to a container element identified by 'sensor-cards-container'. Each card displays the sensor's ID,
 * temperature, humidity, and the last updated timestamp. If an error occurs during the fetch operation,
 * it logs an error message to the console.
 */
 async function fetchSensorData() {
  try {
    const res = await fetch('/api/sensor-status');
    const sensors = await res.json();

    const container = document.getElementById('sensor-cards-container');
    container.innerHTML = ''; // Container wird vor dem Hinzuf√ºgen der neuen Daten geleert

    for (const [id, data] of Object.entries(sensors)) {
      const card = document.createElement('div');
      card.className = 'card';
      card.innerHTML = `
        <div class="card-title">Sensor ${id}</div>
        <div class="card-value">üå°Ô∏è ${data.temperature} ¬∞C</div>
        <div class="card-value">üíß ${data.humidity} %</div>
        <div class="card-footer">üïõ ${new Date(data.timestamp).toLocaleString('de-DE')}</div>
      `;
      container.appendChild(card);
    }
  } catch (err) {
    console.error('Fehler beim Laden der Sensorwerte:', err);
  }
}

fetchSensorData();
setInterval(fetchSensorData, 10_000); // alle 10 Sekunden aktualisieren


  </script>
  

  
  
  <script src="https://unpkg.com/react@18/umd/react.development.js" crossorigin></script>
