<!DOCTYPE html>
<html lang="de">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Bodenfeuchtigkeitsdaten</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #f4f4f9;
      margin: 0;
      padding: 20px;
    }
    h1 {
      text-align: center;
      color: #4CAF50;
    }
    .card-container {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      gap: 20px;
      margin-top: 30px;
    }
    .card {
      padding: 20px;
      border-radius: 12px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      width: 250px;
      text-align: center;
      transition: transform 0.2s, background-color 0.3s;
    }
    .card:hover {
      transform: scale(1.05);
    }
    .card-title {
      font-size: 18px;
      color: #333;
      margin-bottom: 10px;
    }
    .card-value {
      font-size: 24px;
      font-weight: bold;
    }
    .button-row {
      text-align: center;
      margin-top: 30px;
      display: flex;
      justify-content: center;
      gap: 15px;
      flex-wrap: wrap;
    }
    .button-row a {
      background-color: #4CAF50;
      color: white;
      padding: 10px 20px;
      border-radius: 5px;
      text-decoration: none;
      font-size: 16px;
      transition: background-color 0.3s;
    }
    .button-row a:hover {
      background-color: #45a049;
    }
  </style>
</head>
<body>
  <h1>üå± Bodenfeuchtigkeitsdaten</h1>
  <div class="card-container">
    <% function card(title, value, tooltip) { 
         const bg = getBackgroundForValue(value);
         const fg = getColorForValue(value); %>
      <div class="card" style="background-color: <%= bg %>;" title="<%= tooltip || '' %>">
        <div class="card-title"><%= title %></div>
        <div class="card-value" style="color: <%= fg %>;">
          <%= value != null ? value + '%' : 'Keine Daten' %>
        </div>
      </div>
    <% } %>

    <% card('Letzter Wert', lastEntry?.value, 'Letzte Messung vom Sensor'); %>
    <% card('Durchschnitt letzte 10', averages.last10, 'Berechnet aus den letzten 10 Werten'); %>
    <% card('Durchschnitt letzte 50', averages.last50, 'Berechnet aus den letzten 50 Werten'); %>
    <% card('Durchschnitt letzte 100', averages.last100, 'Berechnet aus den letzten 100 Werten'); %>
    <% card('Minimum', min, 'Tiefster aufgezeichneter Wert'); %>
    <% card('Maximum', max, 'H√∂chster aufgezeichneter Wert'); %>

    <div class="card" style="background-color: rgba(200,200,200,0.3);" title="Erste gespeicherte Messung">
      <div class="card-title">Messung seit</div>
      <div class="card-value" style="color: #333;">
        <%= firstEntry ? new Date(firstEntry.timestamp).toLocaleDateString() : 'Keine Daten' %>
      </div>
    </div>
  </div>

  <div class="button-row">
    <a href="/moisture-data/export-latest500">‚¨áÔ∏è Letzte 500 speichern</a>
    <a href="/moisture-data/export-all">‚¨áÔ∏è Alle speichern</a>
    <a href="/">Zur√ºck zur √úbersicht</a>
  </div>
</body>
</html>
