      <button type="button" onclick="location.href='/'">Zur Ãœbersicht</button>
    </div>
  </div>

  <script>
    function fetchAndUpdateChart() {
      fetch('/moisture-data-raw')
        .then(res => {
          if (!res.ok) throw new Error('Keine Feuchtigkeitsdaten verfÃ¼gbar.');
          return res.json();
        })
        .then(data => {
          const chartDiv = document.getElementById('chart');
          if (!data || data.length === 0) {
            chartDiv.innerHTML = '<p>ğŸ“‚ Keine Feuchtigkeitsdaten verfÃ¼gbar.</p>';
            return;
          }

          const moistureData = data.map(entry => ({
            x: new Date(entry.timestamp),
            y: entry.value
          }));

          const trace = {
            x: moistureData.map(entry => entry.x),
            y: moistureData.map(entry => entry.y),
            mode: 'lines+markers',
            name: 'Bodenfeuchtigkeit',
            line: {
              color: 'green',
              width: 3,
              shape: 'spline',
              smoothing: 1.3
            },
            marker: {
              color: moistureData.map(p => p.y < 40 ? 'red' : 'green'),
              size: 6,
              symbol: 'circle'
            },
            hovertemplate: '%{y}% Feuchtigkeit<br>%{x}<extra></extra>'
          };

          const layout = {
            xaxis: {
              title: 'Zeit',
              type: 'date',
              tickformat: '%d.%m.%Y %H:%M',
              tickangle: -30,
              automargin: true,
              gridcolor: 'rgba(0,0,0,0.1)'
            },
            yaxis: {
              title: 'Bodenfeuchtigkeit (%)',
              range: [0, 100],
              tickformat: '.0f',
              gridcolor: 'rgba(0,0,0,0.1)'
            },
            dragmode: 'zoom',
            hovermode: 'closest',
            plot_bgcolor: 'transparent',
            paper_bgcolor: 'transparent',
            margin: { t: 20, r: 20, b: 60, l: 60 },
            legend: { orientation: 'h', x: 0.5, xanchor: 'center', y: -0.2 }
          };

          Plotly.newPlot('chart', [trace], layout, { responsive: true });
        })
        .catch(err => {
          console.error('Fehler beim Laden der Daten:', err);
          document.getElementById('chart').innerHTML = '<p>ğŸ“‚ Keine Feuchtigkeitsdaten verfÃ¼gbar.</p>';
        });
    }

    function deleteMoistureFile() {
      fetch('/delete-moisture-file', { method: 'DELETE' })
        .then(response => {
          if (response.ok) {
            alert('âœ… Datei erfolgreich gelÃ¶scht!');
            Plotly.purge('chart');
            document.getElementById('chart').innerHTML = '<p>ğŸ“‚ Keine Feuchtigkeitsdaten verfÃ¼gbar.</p>';
          } else {
            alert('âŒ Fehler beim LÃ¶schen der Datei.');
          }
        })
        .catch(err => {
          console.error('âŒ Fehler beim LÃ¶schen der Datei:', err);
          alert('âŒ Netzwerkfehler.');
        });
    }

    fetchAndUpdateChart();
    setInterval(fetchAndUpdateChart, 10000);
  </script>

</body>
