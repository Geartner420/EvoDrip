<!DOCTYPE html>
<html lang="de">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Bodenfeuchtigkeits-Diagramm</title>
  <script src="https://cdn.plot.ly/plotly-latest.min.js"></script>
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #f4f4f9;
      color: #333;
      margin: 0;
      padding: 20px;
    }
    h1 {
      color: #4CAF50;
      text-align: center;
      margin-bottom: 20px;
      font-size: 32px;
    }
    .container {
      display: grid;
      justify-items: center;
      max-width: 900px;
      margin: auto;
      padding: 20px;
      background: white;
      border: 1px solid #ddd;
      border-radius: 12px;
    }
    #chart {
      width: 100% !important;
      height: 600px;
    }
    @media (max-width: 768px) { #chart { height: 60vh; } }
    @media (min-width: 1024px) { #chart { height: 600px; } }
    button {
      background-color: #4CAF50;
      color: white;
      padding: 10px 20px;
      border: none;
      border-radius: 5px;
      cursor: pointer;
      font-size: 16px;
      margin-top: 20px;
    }
    button:hover { background-color: #45a049; }
  </style>
</head>
<body>

<div class="container">
  <h1>🌱 Bodenfeuchtigkeit Verlauf</h1>
  <div id="chart"></div>
  <button onclick="window.location.href='/'">Zurück zur Übersicht</button>
  <button onclick="deleteMoistureFile()">📂 Diagramm leeren</button>
</div>

<script>
function fetchAndUpdateChart() {
  fetch('/moisture-data-raw')
    .then(res => {
      if (!res.ok) {
        throw new Error('Keine Feuchtigkeitsdaten verfügbar.');
      }
      return res.json();
    })
    .then(data => {
      const chartDiv = document.getElementById('chart');

      if (!data || data.length === 0) {
        chartDiv.innerHTML = '<p>📂 Keine Feuchtigkeitsdaten verfügbar.</p>';
        return;
      }

      const moistureData = data.map(entry => ({
        x: new Date(entry.timestamp),
        y: entry.value
      }));

      const trace = {
        x: moistureData.map(entry => entry.x),
        y: moistureData.map(entry => entry.y),
        mode: 'lines+markers',
        name: 'Bodenfeuchtigkeit',
        line: {
          color: 'green',
          width: 3,
          shape: 'spline',
          smoothing: 1.3
        },
        marker: {
          color: moistureData.map(p => p.y < 40 ? 'red' : 'green'),
          size: 6,
          symbol: 'circle'
        },
        hovertemplate: '%{y}% Feuchtigkeit<br>%{x}<extra></extra>'
      };

      const layout = {
        title: '',
        xaxis: {
          title: 'Zeit',
          type: 'date',
          tickformat: '%d.%m.%Y %H:%M',
          tickangle: -30,
          automargin: true,
          gridcolor: 'rgba(0,0,0,0.1)'
        },
        yaxis: {
          title: 'Bodenfeuchtigkeit (%)',
          range: [0, 100],
          tickformat: '.0f',
          gridcolor: 'rgba(0,0,0,0.1)'
        },
        dragmode: 'zoom',
        hovermode: 'closest',
        plot_bgcolor: '#ffffff',
        paper_bgcolor: '#ffffff',
        margin: { t: 20, r: 20, b: 60, l: 60 },
        legend: { orientation: 'h', x: 0.5, xanchor: 'center', y: -0.2 }
      };

      Plotly.newPlot('chart', [trace], layout);
    })
    .catch(err => {
      console.error('Fehler beim Laden der Daten:', err);
      document.getElementById('chart').innerHTML = '<p>📂 Keine Feuchtigkeitsdaten verfügbar.</p>';
    });
}

function deleteMoistureFile() {
  fetch('/delete-moisture-file', { method: 'DELETE' })
    .then(response => {
      if (response.ok) {
        alert('✅ Datei erfolgreich gelöscht!');
        Plotly.purge('chart');
        document.getElementById('chart').innerHTML = '<p>📂 Keine Feuchtigkeitsdaten verfügbar.</p>';
      } else {
        alert('❌ Fehler beim Löschen der Datei.');
      }
    })
    .catch(err => {
      console.error('❌ Fehler beim Löschen der Datei:', err);
      alert('❌ Netzwerkfehler.');
    });
}

fetchAndUpdateChart();
setInterval(fetchAndUpdateChart, 10000);
</script>

</body>
</html>
